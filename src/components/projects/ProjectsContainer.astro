---
import projects from "./projectData.ts";
import GitIcon from "../../assets/SVG/GitIcon.svg";
import PlayIcon from "../../assets/SVG/PlayIcon.svg";
import { Image } from "astro:assets";
---

<div id="ProjectsContainer">
    {
        projects.map((project) => (
            <article class="project-card">
                <div class="project-card-background">
                    <h1 class="card-title">{project.name}</h1>
                    <div
                        class="project-description"
                        set:html={project.description}
                    />
                    <div class="card-img-overlay">
                        <Image
                            class="card-img"
                            src={project.imageURL}
                            alt={project.name}
                        />
                    </div>
                </div>
                <div class="link-container">
                    <a class="git-btn" href={project.gitURL} target="_blank">
                        <GitIcon class={"git-icon"} />
                        GitHub
                    </a>
                    <button class="close-btn">Close</button>
                    <a
                        class={`${project.demoURL ? "" : "hide-demo-bt"} demo-btn`}
                        href={project.demoURL}
                        target="_blank"
                    >
                        <PlayIcon class="demo-icon" />
                        Demo
                    </a>
                </div>
            </article>
        ))
    }
</div>
<div id="image-modal" class="hidden">
    <div class="modal-content">
        <Image
            id="modal-image"
            src={projects[0].imageURL}
            alt="Enlarged Project Image"
        />
        <button id="close-modal">Close</button>
    </div>
</div>
<style>
    .hide-demo-bt {
        opacity: 0;
        pointer-events: none;
    }
    #image-modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgb(255, 255, 255);
        backdrop-filter: blur(40px);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1;
    }

    #image-modal.hidden {
        display: none;
    }

    .modal-content {
        position: relative;
        max-width: 90%;
        max-height: 90%;
    }

    .modal-content img {
        width: clamp(250px, min(75vw, 80vh), 800px);
        height: auto;
        border-radius: 10px;
    }

    #close-modal {
        position: fixed;
        top: 5vh;
        right: 3vw;
    }
    #close-modal:hover {
        background-color: var(--red);
    }
    #close-modal {
        cursor: pointer;
        font-size: 1rem;
        font-weight: bold;
        padding: 0.4em 1.2em;
        color: #382b22;
        background: #fff0f0;
        border: 3px solid rgb(230, 199, 211);
        border-radius: 0.75em;
        transition:
            transform 100ms cubic-bezier(0, 0, 0.58, 1),
            box-shadow 100ms cubic-bezier(0, 0, 0.58, 1);
        box-shadow:
            0 5px 0 0px #d1a3b6,
            0 12px 0 0 #ffe3e2;
    }
    #close-modal:hover {
        background: rgba(255, 0, 0, 0.3);
        border: 3px solid rgba(255, 0, 0, 0.3);
        transform: translate(0, 0.15em);
        box-shadow:
            0 3px 0 0px #c498aa,
            0 7px 0 0 #ffe3e2;
    }
    #close-modal:active {
        background: rgba(255, 0, 0, 0.4);
        transform: translate(0em, 0.35em);
        box-shadow:
            0 0px 0 0px #b18597,
            0 3px 0 0 #ffe3e2;
    }

    #ProjectsContainer {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 3em;
        justify-content: space-around;
        margin: 0 auto;
        padding: 12em 5em 10em 18em;
        overflow: hidden;
    }

    /* -------------- */
    /* Cards Original */
    /* -------------- */
    .project-card {
        position: relative;
        background-color: rgba(251, 255, 238, 0.555);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 300px;
        height: 355px;
        border-radius: 10px;
        padding: 0.75em;
        box-shadow:
            rgb(177, 133, 151) 0px 0px 0px 4px,
            rgb(177, 156, 156) 0px 0.5em;
        transition: all 1s ease;
    }
    .project-card-background {
        background-color: none;
        box-shadow: none;
        height: 83%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        border-radius: 10px;
        margin-bottom: 2em;
    }
    .project-description {
        display: none;
        opacity: 0;
        line-height: 1.3;
        max-inline-size: 650px;
    }
    .card-img-overlay {
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        box-shadow:
            rgb(233, 233, 233) 0px 0px 0px 3px,
            rgb(201, 179, 178) 0px 0.3em;
        border-radius: 10px;
        overflow: hidden;
        cursor: pointer;
        transition: all 0.5s ease;
    }
    .card-img {
        filter: grayscale(1) blur(4px);
        transition: all 0.2s ease-in-out;
        height: 275px;
    }
    .card-title {
        z-index: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        font-size: 1.4rem;
        width: 308px;
        height: 60px;
        margin-left: -0.7em;
        margin-top: 50px;
        background-color: rgb(201, 179, 178);
        cursor: pointer;
        opacity: 1;
        transition: all 0.5s ease-in-out;
    }
    .link-container {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: flex-end;
    }
    .link-container button {
        display: none;
    }
    .git-btn,
    .demo-btn {
        font-size: 0.9rem;
        font-weight: bold;
        width: fit-content;
        transition: all 0.25s ease-in-out;
        color: #000;
    }
    .git-icon,
    .demo-icon {
        max-width: 25px;
        height: 25px;
    }
    .demo-btn {
        align-self: end;
    }
    .demo-icon {
        margin-bottom: -0.15em;
    }
    .git-icon {
        filter: invert(100%);
        transition: all 0.25s ease-in-out;
    }
    .git-btn:hover {
        filter: drop-shadow(0 1px 1px rgba(255, 0, 0, 0.5));
    }
    .git-btn:hover .git-icon,
    .demo-btn:hover .demo-icon {
        filter: invert(17%) sepia(58%) saturate(7097%) hue-rotate(355deg)
            brightness(93%) contrast(122%);
    }

    /* -------------- */
    /*  Cards Active  */
    /* -------------- */
    #ProjectsContainer:has(.active) {
        padding: 9em 5em 3em 13em;
        transition: all 0.1s ease-in-out 0.4s;
    }
    .project-card.active {
        animation: scaleActive 1s ease 0s forwards;
        transition: all 1s ease;
    }
    .project-card.vanish {
        pointer-events: none;
        animation: vanishInactive 0.5s ease 0s forwards;
    }
    .project-card.active .project-card-background {
        background-color: #fff;
        border-radius: 10px;
        box-shadow:
            rgb(233, 233, 233) 0px 0px 0px 5px,
            rgb(201, 179, 178) 0px 0.3em;
        overflow-y: auto;
        overflow-x: hidden;
        align-items: center;
    }
    .project-card.active .card-img-overlay {
        animation: MoveIMGOverlay 0.5s ease 0s forwards;
        cursor: initial;
    }
    .project-card.active .card-title {
        animation: moveTitle 0.5s ease 0s forwards;
        cursor: default;
    }

    .project-card.active .project-description {
        animation: showDescription 0.5s ease 0s forwards;
        display: block;
        opacity: 1;
    }
    .project-card.active .card-img {
        animation: resizeIMG 0.5s ease-in-out 0s forwards;
    }
    .project-card.active .link-container {
        animation: blinkLinks 0.5s ease forwards;
    }
    .project-card.active .link-container button {
        animation: showCloseButton 0.5s ease forwards;
        display: inline-block;
    }

    /* -------------- */
    /*   Cards Hover  */
    /* -------------- */
    .project-card:not(.active):hover {
        transform: translateY(-1%);
        box-shadow:
            rgb(177, 133, 151) 0px 0px 0px 4px,
            rgb(214, 189, 189) 0px 0.75em;
        transition: all 0.25s ease;
    }
    .project-card:not(.active):hover .card-img-overlay {
        box-shadow:
            rgb(238, 238, 238) 0px 0px 0px 2px,
            rgb(201, 179, 178) 0px 0.4em;
    }
    .project-card:not(.active):hover .card-title {
        opacity: 0;
        pointer-events: none;
    }
    .project-card:not(.active):hover .card-img {
        scale: 1.1;
        filter: grayscale(0) blur(0px);
    }
    .project-card:not(.active):hover .card-img-overlay:hover {
        box-shadow:
            rgba(255, 0, 0, 0.5) 0px 0px 0px 3px,
            rgba(255, 0, 0, 0.5) 0px 0.4em,
            rgb(201, 179, 178) 0px 0.4em;
    }

    /* -------------- */
    /*  Close Button  */
    /* -------------- */
    .close-btn {
        cursor: pointer;
        font-size: 1rem;
        font-weight: bold;
        padding: 0.4em 1.2em;
        color: #382b22;
        background: #fff0f0;
        border: 3px solid rgb(230, 199, 211);
        border-radius: 0.75em;
        transition:
            transform 100ms cubic-bezier(0, 0, 0.58, 1),
            box-shadow 100ms cubic-bezier(0, 0, 0.58, 1);
        box-shadow:
            0 5px 0 0px #d1a3b6,
            0 12px 0 0 #ffe3e2;
    }
    .close-btn:hover {
        background: rgba(255, 0, 0, 0.3);
        border: 3px solid rgba(255, 0, 0, 0.3);
        transform: translate(0, 0.15em);
        box-shadow:
            0 3px 0 0px #c498aa,
            0 7px 0 0 #ffe3e2;
    }
    .close-btn:active {
        background: rgba(255, 0, 0, 0.4);
        transform: translate(0em, 0.35em);
        box-shadow:
            0 0px 0 0px #b18597,
            0 3px 0 0 #ffe3e2;
    }

    /* -------------- */
    /*   Animations   */
    /* -------------- */

    @keyframes blinkLinks {
        0% {
            opacity: 1;
        }
        25% {
            opacity: 0;
        }
        95% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
    }

    @keyframes showCloseButton {
        0% {
            opacity: 0;
            display: none;
        }
        85% {
            opacity: 0;
            display: none;
        }
        100% {
            opacity: 1;
            display: inline-block;
        }
    }
    @keyframes vanishInactive {
        from {
            opacity: 1;
            display: flex;
            transform: translate(0, 0);
        }
        to {
            opacity: 0;
            scale: 0.95;
            display: none;
            transform: translate(0, 0);
        }
    }
    @keyframes scaleActive {
        0% {
            scale: 1;
            opacity: 1;
            transform: translate(0, 0);
            padding: 0.75em;
        }
        25% {
            scale: 1.05;
            opacity: 1;
            transform: translate(0, -2%);
            padding: 0.75em;
        }
        40% {
            scale: 1;
            opacity: 0;
            transform: translate(0, -3%);
            padding: 0.75em;
        }
        50% {
            scale: 1;
            width: 300px;
            height: 355px;
            min-height: 355px;
            opacity: 0;
            transform: translate(0, -3%);
            padding: 1.75em;
        }
        55% {
            box-shadow: none;
            opacity: 0;
            width: 60vw;
            max-width: 900px;
            height: 55vh;
            min-height: 800px;
        }
        75% {
            opacity: 1;
            max-width: 900px;
            width: 60vw;
            height: 55vh;
            min-height: 800px;
        }
        100% {
            opacity: 1;
            max-width: 900px;
            width: 60vw;
            height: 55vh;
            padding: 1.75em;
            min-height: 800px;
        }
    }
    @keyframes moveTitle {
        0% {
            opacity: 0;
            width: 200px;
            margin-top: 50px;
        }
        85% {
            opacity: 0;
            width: 60vw;
            margin: 20px 0 0 0;
            background-color: unset;
            position: absolute;
        }
        100% {
            opacity: 1;
            width: 100%;
            margin: 20px 0 0 0;
            background-color: unset;
            position: relative;
        }
    }
    @keyframes showDescription {
        0% {
            display: none;
            opacity: 0;
        }
        25% {
            display: none;
            opacity: 0;
        }
        85% {
            display: none;
            opacity: 0;
        }
        100% {
            display: block;
            text-align: center;
            opacity: 1;
            padding: 3em 1em 0 1em;
            font-size: clamp(0.9rem, 2vw, 1.3rem);
        }
    }
    @keyframes MoveIMGOverlay {
        85% {
            width: 100%;
            height: 100%;
            overflow: hidden;
            padding-bottom: 0em;
        }
        100% {
            box-shadow: none;
            margin: 0 auto;
            width: 100%;
            height: 100%;
            border: none;
            overflow: visible;
            padding-bottom: 0em;
        }
    }
    @keyframes scaleActiveSM {
        0% {
            min-height: 355px;
            scale: 1;
            opacity: 1;
            transform: translate(0, 0);
            padding: 0.75em;
        }
        25% {
            min-height: 355px;
            scale: 1.05;
            opacity: 1;
            transform: translate(0, -2%);
        }
        40% {
            min-height: 355px;
            scale: 1;
            opacity: 0;
            transform: translate(0, -3%);
            padding: 0.75em;
        }
        50% {
            scale: 1;
            width: 300px;
            min-height: 355px;
            height: 355px;
            opacity: 0;
            transform: translate(0, -3%);
            padding: 1.75em;
        }
        55% {
            box-shadow: none;
            opacity: 0;
            width: 98vw;
            min-height: 730px;
            height: 74vh;
        }
        75% {
            opacity: 1;
            width: 98vw;
            min-height: 730px;
            height: 74vh;
        }
        100% {
            opacity: 1;
            width: 98vw;
            min-height: 730px;
            height: 74vh;
        }
    }

    @keyframes resizeIMG {
        0% {
            filter: grayscale(1) blur(4px);
            min-width: initial;
            width: initial;
            max-width: initial;
            height: 275px;
        }
        85% {
            filter: grayscale(1) blur(4px);
            min-width: initial;
            width: initial;
            max-width: initial;
            height: 300px;
        }
        100% {
            height: auto;
            min-width: 250px;
            width: 100%;
            max-width: 450px;
            filter: grayscale(0) blur(0px);
            padding: 1em 1em;
        }
    }

    /* ------------------------------------ */
    /* -------------- Scroll--------------- */
    /* ------------------------------------ */

    .project-card-background::-webkit-scrollbar {
        width: 5px;
    }
    .project-card-background::-webkit-scrollbar-track {
        background: none;
    }
    .project-card-background::-webkit-scrollbar-thumb {
        background-color: rgb(128, 128, 128);
        border-radius: 20px;
        border: 3px solid rgb(187, 187, 187);
    }

    /* ------------------------------------ */
    /* ----------MAX WIDTH 750px----------- */
    /* ------------------------------------ */
    @media (max-width: 750px), (max-height: 750px) {
        #ProjectsContainer {
            padding: 6em 0;
            overflow: hidden;
        }
        #ProjectsContainer:has(.active) {
            padding: 3.5em 0 1em 0;
            transition: all 0.5s ease-in-out 0.5s;
        }
        .project-card.active {
            animation: scaleActiveSM 1s ease 0s forwards;
            transition: all 1s ease-in-out;
            justify-content: space-around;
            padding-bottom: 1.5em;
        }
        .project-card.active .project-card-background {
            margin-bottom: 0;
            transition: all 0.2s ease-in-out 0.5s;
        }
        .project-card.active .card-img-overlay {
            animation: MoveIMGOverlay 0.5s ease-in-out 0s forwards;
            cursor: initial;
        }

        .project-card.active .project-description {
            animation: showDescription 0.5s ease-in-out 0s forwards;
            display: block;
            opacity: 1;
        }
        .project-card.active .card-img {
            animation: resizeIMG 0.5s ease-in-out 0.1s forwards;
        }
    }
</style>
<script is:inline type="module">
    const ProjectsContainer = document.getElementById("ProjectsContainer");
    const closeBtns = document.querySelectorAll(".close-btn");
    const cards = document.querySelectorAll(".project-card");
    const imgOverlays = document.querySelectorAll(".card-img-overlay");

    const modal = document.getElementById("image-modal");
    const modalImage = document.getElementById("modal-image");
    const closeModal = document.getElementById("close-modal");
    const navDiv = document.getElementById("NavDiv");

    document.querySelectorAll(".card-img").forEach((img) => {
        img.addEventListener("click", (e) => {
            const card = img.closest(".project-card");
            if (card && card.classList.contains("active")) {
                modalImage.src = img.src;
                modal.classList.remove("hidden");
                navDiv.classList.add("hidden");
            }
        });
    });

    closeModal.addEventListener("click", () => {
        modal.classList.add("hidden");
        navDiv.classList.remove("hidden");
    });

    modal.addEventListener("click", (e) => {
        if (e.target === modal) {
            modal.classList.add("hidden");
            navDiv.classList.remove("hidden");
        }
    });

    function removeClasses() {
        cards.forEach((c) => {
            c.classList.remove("vanish", "active");
        });
    }

    imgOverlays.forEach((overlay) => {
        overlay.addEventListener("click", (e) => {
            e.stopPropagation();

            const card = overlay.closest(".project-card");
            if (card) {
                cards.forEach((c) => {
                    if (c !== card) {
                        c.classList.add("vanish");
                        c.classList.remove("active");
                    }
                });
                card.classList.add("active");
            }
        });
    });

    closeBtns.forEach((closeBtn) => {
        closeBtn.addEventListener("click", () => {
            removeClasses();
        });
    });
    ProjectsContainer.addEventListener("click", (e) => {
        if (!e.target.closest(".project-card")) {
            removeClasses();
        }
    });

    document.addEventListener("sectionChanged", (event) => {
        const selectedSection = event.detail;
        if (selectedSection !== "Projects") {
            setTimeout(() => {
                removeClasses();
            }, 500);
        }
    });
</script>
