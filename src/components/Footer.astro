<style>
	#FooterContainer {
		z-index: 10;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		position: fixed;
		height: 80px;
		width: 100vw;
		background-color: black;
		box-shadow: #0000003f 0px -2px 10px 1px;
		bottom: 0;
		left: 0;
	}
	.Icons {
		width: 40px;
		height: 40px;
		overflow: visible;
		padding-bottom: 0.4em;
	}
	ul {
		display: flex;
		flex-direction: row;
		width: 100vw;
		justify-content: space-evenly;
	}
	li {
		height: 100%;
	}
	a {
		display: flex;
		flex-direction: column;
		align-items: center;
		width: max-content;
	}
	a span {
		font-size: 1rem;
		color: white;
	}
	@media (max-width: 750px), (max-height: 750px) {
		#FooterContainer {
			height: 50px;
		}
		a span {
			display: none;
		}
		.Icons {
			width: 30px;
			height: 30px;
		}
	}
</style>
